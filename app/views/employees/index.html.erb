<div class="index-container">
    <div class="main-container">
      <% @employees.order(:name).each do |employee| %>
      <a href="<%= employee_path(employee) %>" class="team-link">
      <div class="team-container">
        <div class="team-details">
          <div class="detail">
            <strong>Name:</strong> <%= employee.name %>
          </div>
          <div class="detail">
            <strong>Email:</strong> <%= employee.email %>
          </div>
          <div class="detail">
            <strong>Team:</strong> <%= employee.team ? employee.team.name : 'Not Assigned' %>
          </div>
        </div>
        <% if admin_signed_in? %>
        <div class="actions">
            <%= link_to edit_employee_path(employee),
                class: "bi bi-pencil-square" do %>
            <% end %>
            <%= link_to employee_path(employee),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: "bi bi-trash3-fill" do %>
            <% end %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.querySelectorAll('.employee').forEach(function(element) {
        element.style.display = 'block';
  });

  document.querySelectorAll('.employee-nav').forEach(function(element) {
        element.className += ' active'
  });
</script>

