<div class="index-container">
<div class="center-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <p>
      <%= f.label :email , 'Email <span class="required">*</span>'.html_safe %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </p>

    <p>
      <%= f.label :password ,'Password <span class="required">*</span>'.html_safe %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </p>

    <p>
      <%= f.label :password_confirmation , 'Password confirmation <span class="required">*</span>'.html_safe%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </p>

     <p class="submit-button">
        <%= f.submit "Sign up" %>
      </p> 
  <% end %>

</div>
</div>

<script>
  document.querySelectorAll('.signup').forEach(function(element) {
        element.className += ' active'
  });
</script>
