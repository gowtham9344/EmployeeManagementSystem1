<div class="index-container">
  <div class="main-container">
    <% @teams.order(:name).each do |team| %>
      <a href="<%= team_path(team) %>" class="team-link">
        <div class="team-container">
          <div class="team-details">
            <div class="detail">
              <strong>Name:</strong> <%= team.name.capitalize %>
            </div>
            <div class="detail">
              <strong>Manager:</strong>
              <% if team.manager %>
                <%= team.manager.name.capitalize %>
              <% else %>
                Not assigned
              <% end %>
            </div>
          </div>
          <% if is_admin? %>
          <div class="actions">
            <%= link_to edit_team_path(team),
              class: "bi bi-pencil-square" do %>
            <% end %>
            <%= link_to team_path(team),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: "bi bi-trash3-fill" do %>
            <% end %>
          </div>
          <% end %>
        </div>
      </a>
    <% end %>
  </div>
</div>

<script>
  document.querySelectorAll('.team').forEach(function(element) {
        element.style.display = 'block';
  });

  document.querySelectorAll('.TeamSearch').forEach(function(element) {
        element.style.display = 'block';
  });

  document.querySelectorAll('.team-nav').forEach(function(element) {
        element.className += ' active'
  });

</script>
